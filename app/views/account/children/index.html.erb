<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 intertext text-center">
      <h1>Our Catalogue</h1>
      <h2>Discover new, inspiring babys close to your home.</h2>
      <%= link_to "Create a new child", new_account_child_path, class:"btn btn-medium" %>
    </div>
  </div>
</div>


<div class="container">
  <div class="row" id="children_list">
    <%= render 'cards' %>
  </div>
</div>


<div id="map" style="width: 100%; height: 200px;" data-children="<%= @children.to_json %>"></div>

<% content_for(:after_js) do %>
  <script>
    $(document).on('ready', function() {
      if (<%= @center.present? %>) {
        var handler = Gmaps.build('Google');
        handler.buildMap({ internal: { id: 'map' } }, function() {
          markers = handler.addMarkers(<%= raw @hash.to_json %>);
          handler.getMap().setCenter({lat: <%= @center ? @center.latitude : 0 %>, lng: <%= @center ? @center.longitude : 0 %>});
          if (markers.length == 0) {
            handler.getMap().setZoom(2);
          } else {
            handler.getMap().setZoom(11);
          }
        });

        var map = handler.getMap();
        google.maps.event.addListener(map, 'bounds_changed', function(e) {
          window.setTimeout(function() {
            bPointsNELat = map.getBounds().getNorthEast().lat();
            bPointsSWLat = map.getBounds().getSouthWest().lat();
            bPointsNELng = map.getBounds().getNorthEast().lng();
            bPointsSWLng = map.getBounds().getSouthWest().lng();

            bPoints = [bPointsSWLat, bPointsSWLng, bPointsNELat, bPointsNELng];

            $.ajax({
              url : '/account/children.js?bounds=' + bPoints,
              type: "GET",
              success: function(data) {
                $('#children_list').html(data);
              },
              error: function(e) {
                $('#children_list').html(e.responseText);
              }
            });


          }, 1000);
        });
      } else {
        var handler = Gmaps.build('Google');
        handler.buildMap({ internal: { id: 'map' } }, function() {
          markers = handler.addMarkers(<%= raw @hash.to_json %>);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
          if (markers.length == 0) {
            handler.getMap().setZoom(2);
          } else if (markers.length == 1) {
            handler.getMap().setZoom(14);
          }
        });
        console.log('coucou');
        var map = handler.getMap();
        google.maps.event.addListener(map, 'bounds_changed', function(e) {
          window.setTimeout(function() {
            bPointsNELat = map.getBounds().getNorthEast().lat();
            bPointsSWLat = map.getBounds().getSouthWest().lat();
            bPointsNELng = map.getBounds().getNorthEast().lng();
            bPointsSWLng = map.getBounds().getSouthWest().lng();

            bPoints = [bPointsSWLat, bPointsSWLng, bPointsNELat, bPointsNELng];

            $.ajax({
              url : '/account/children.js?bounds=' + bPoints,
              type: "GET",
              success: function(data) {
                $('#children_list').html(data);
              },
              error: function(e) {
                $('#children_list').html(e.responseText);
              }
            });


          }, 1000);
        });
      }
    });
  </script>
<% end %>
