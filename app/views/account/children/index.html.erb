<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 intertext text-center">
      <h1>Our Catalogue</h1>
      <h2>Discover new, inspiring babys close to your home.</h2>
      <%= link_to "Create a new child", new_account_child_path, class:"btn btn-medium" %>
    </div>
  </div>
</div>


<div class="container">
  <div class="row" id="children_list">
    <%= render 'cards' %>
  </div>
</div>


<div id="map" style="width: 100%; height: 200px;" data-children="<%= @children.to_json %>"></div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).on('ready', function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });

      var map = handler.getMap();
      google.maps.event.addListener(map, 'dragend', function(e) {
        window.setTimeout(function() {
          cLat = map.getCenter().lat();
          cLng = map.getCenter().lng();
          cPoint = [cLat, cLng];
          cBounds = map.getBounds();

          $.ajax({
            url : 'http://localhost:3000/account/children.js?center='+ cPoint,
            type: "GET",
            success: function(data) {
              console.log('coucou');
              $('#children_list').html(data);
            },
            error: function(e) {
              $('#children_list').html(e.responseText);
            }
          });


        }, 300);
      });

    });
  <% end %>
<% end %>
