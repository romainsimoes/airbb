<div class="navbar-wagon">
  <!-- Logo -->
  <a href="/" class="navbar-wagon-brand-btn navbar-wagon-brand-btn"><%= image_tag "baby_logo.png" %></a>


 <!--    <form action="" class="navbar-wagon-search">
        <input type="text" id="text" class="navbar-wagon-search-input" placeholder="Search for a child"> -->
        <%= form_tag url_for(action: 'index', controller: 'account/children'), class: "navbar-wagon-search", method: :get do %>
          <%= text_field_tag :center, params[:center], placeholder: "Location Search", class: "navbar-wagon-search-input" %>
        <% end %>
 <!--    </form> -->

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">


    <!-- Notification link-->
    <% if current_user %>
    <div class="navbar-wagon-item padding-plus-navbar-item">
      <div class="dropdown">

      <%= link_to 'Catalogue', children_path, class:"btn btn-rectangle-navbar", id:"margin-left-none"  %>
      <%= link_to 'Add a Child', new_account_child_path, class:"btn btn-rectangle-navbar" %>
        <% if user_signed_in? && current_user.facebook_picture_url %>
          <%= image_tag current_user.facebook_picture_url, class:"avatar-large dropdown-toggle", id: "nvb-menu", 'data-toggle' => "dropdown"  %>
          <% else %>
            <img src="http://rhone-alpes.nouscitoyens.fr/wp-content/uploads/sites/2/2014/11/avatar-profil-facebook-1.jpg" id="nvb-menu" data-toggle="dropdown" class="avatar-large dropdown-toggle">
        <% end %>

        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><%= link_to 'Profile', account_profile_path(current_user.profile) %></li>
          <li><%= link_to 'Favorites', account_favorites_path %></li>
          <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
        </ul>
      </div>
    </div>
    <% else %>
      <ul class="list-inline list-inline-padding">
        <li><%= link_to 'Add a Child', new_user_session_path, class:"navbar-wagon navbar-wagon-btn", id: "border" %></li>
        <li><%= link_to 'Sign up', new_user_registration_path, class:"navbar-wagon navbar-wagon-btn" %></li>
        <li><%= link_to 'Log in', new_user_session_path, class:"navbar-wagon navbar-wagon-btn" %></li>
      </ul>
    <% end %>
  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
      <% if current_user %>
        <li><%= link_to 'Add a Child', new_account_child_path %></li>
        <li><%= link_to 'Profile', account_profile_path(current_user) %></li>
        <li><%= link_to 'Favorites', account_favorites_path %></li>
        <li><%= link_to 'Catalogue', children_path %></li>
        <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
      <% else %>
        <li><%= link_to 'Add a Child', new_user_session_path %></li>
        <li><%= link_to 'Sign up', new_user_registration_path %></li>
        <li><%= link_to 'Log in', new_user_session_path %></li>
      <% end %>
      </ul>
    </div>
  </div>
</div>
